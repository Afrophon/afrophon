<% form_tag( { :action => "kontakt" }, :id => "kontakt" ) do %> 
<fieldset id="basics">
<p>
<label for="name">Name</label>
<input type="text" name="name" id="name" size="30" placeholder="Peter Enterprise" required />
</p>
<p>
<label for="email">E-Mail</label>
<input type="email" name="email" id="email" size="30" placeholder="peter@afrophon.de" required />
</p>
<p>
<label for="telefon">Telefonnummer</label>
<input type="tel" name="telefon" id="telefon" size="30" placeholder="03521 456 438" />
</p>
</fieldset>
<fieldset id="nachricht">
<p>
<label for="nachricht">Nachricht</label>
<textarea name="nachricht" id="nachricht" required></textarea>
</p>
</fieldset>
<button type="submit" value="Abschicken" >Abschicken</button>
<div id="message">Es gab einen Fehler beim Senden der Nachricht!</div>
<% end %> 
